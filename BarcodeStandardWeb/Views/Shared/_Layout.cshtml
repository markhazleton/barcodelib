@using System.Web.Optimization
@{
    string Version = ViewContext.HttpContext.Server.MachineName.ToString();
    Version = String.Format("{0}.{1} ({2}.{3})",
        Microsoft.AspNetCore.Mvc.Controller.GetType().Assembly.GetName().Version.Major,
        Microsoft.AspNetCore.Mvc.Controller.GetType().Assembly.GetName().Version.Minor,
        Microsoft.AspNetCore.Mvc.Controller.GetType().Assembly.GetName().Version.Build,
        Version.Substring(Version.Length - 4));
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>MVC Sample Barcode - Mark Hazleton</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="MVC Sample CRUD - Mark Hazleton">
    <meta name="author" content="Mark Hazleton">
    @Styles.Render("~/bundles/style")
    @RenderSection("styles", required: false)
</head>

<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/">MVC Barcode Sample</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/barcode">BarCode</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="container-fluid" style="padding-top:25px;margin-top:25px;margin-bottom:25px;padding-bottom:25px;">
        @RenderBody()
    </section>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <div>
                <p class="m-0 text-center text-white">Copyright &copy; <a target="_blank" href='https://www.linkedin.com/in/markhazleton'>Mark Hazleton</a> 2019-2021</p>
            </div>

        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>

</html>
